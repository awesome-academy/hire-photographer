<%= t ".new_post" %>
<%= form_for @post, class:"form-group" do |f| %>
  <% if @post.errors.any? %>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :hourly_rate %><br />
    <%= f.number_field :hourly_rate, in: 1..9999, step: 0.01, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, autofocus: true %>
  </div>

  <%= f.submit "Create", class: "btn btn-warning form-control" %>

<% end %>
